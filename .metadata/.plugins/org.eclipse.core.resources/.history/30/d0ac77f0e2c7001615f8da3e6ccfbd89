	/**
	 * Create the frame.
	 */
	public UpdateCompany() {
		setResizable(false);
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setBounds(100, 100, 541, 503);
		contentPane = new JPanel();
