package chat;

import java.awt.Color;
import java.awt.Dimension;
import java.awt.Font;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.JScrollPane;
import javax.swing.JTextArea;
import javax.swing.JTextField;


public class Client extends JFrame{
	
	private final int DEFAULT_WIDTH =520 ,
			DEFAULT_HEIGHT = 600;

	private JPanel panel;
	private Font font;
	private JTextArea txtArea;
	private JScrollPane scp;
	private JTextField message;
	private JButton enter;
	public Client(){
		
		createFrame();
	}

	void createFrame(){
		font = new Font("Arial" ,Font.BOLD+Font.ITALIC,20);
		panel =new JPanel();
		panel.setSize(new Dimension(DEFAULT_WIDTH,DEFAULT_HEIGHT));
		panel.setBackground(Color.LIGHT_GRAY);
		panel.setLayout(null);		
		panel.setBackground(Color.black);
		this.getContentPane().add(panel);
		//////////////////////////////////////////////////////////////////
		
		txtArea = new JTextArea();
		txtArea.setBounds(5,5,493,496);
		txtArea.setEditable(false);
		txtArea.setForeground(Color.black);
		txtArea.setFont(font);
		scp =new JScrollPane(txtArea);
		panel.add(scp);
		panel.add(txtArea);
		///////////////////////////////////////////////////////////////
		
		message = new JTextField();
		message.setBounds(5, 505, 410, 50);
		message.setForeground(Color.black);
		message.setFont(font);
		panel.add(message);
		///////////////////////////////////////////////////////////////
		enter =new JButton("Send");
		enter.setBounds(420, 505, 78, 50);
		enter.addActionListener(new ActionListener() {
			
			@Override
			public void actionPerformed(ActionEvent e) {
			
				String word = message.getText();
				txtArea.append("You-> "+word+"\n");
				message.setText("");
				
			}
		});
		panel.add(enter);
		
		///////////////////////////////////////////////////////////////
		
		this.setSize(DEFAULT_WIDTH,DEFAULT_HEIGHT);
		this.setLocationRelativeTo(null);
		this.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		this.setResizable(false);
		this.setVisible(true);
		this.setTitle("Client");
		
		
	}
}
